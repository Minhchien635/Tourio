                     <Text strokeType="OUTSIDE" strokeWidth="0.0" text="Phí dịch vụ" />
                 </VBox>
                 <HBox fx:id="tableActionButtons" spacing="8.0" translateY="-4.0">
                     <Button mnemonicParsing="false" onAction="#onAddCostClick" text="Thêm">
                         <styleClass>
                             <String fx:value="primary-button" />
                             <String fx:value="action-button" />
                         </styleClass>
                     </Button>
                     <Button mnemonicParsing="false" onAction="#onEditCostClick" text="Sửa">
                         <styleClass>
                             <String fx:value="primary-button" />
                             <String fx:value="action-button" />
                         </styleClass>
                     </Button>
                     <Button mnemonicParsing="false" onAction="#onDeleteCostClick" text="Xóa">
                         <styleClass>
                             <String fx:value="danger-button" />
                             <String fx:value="action-button" />
                         </styleClass>
                     </Button>
                 </HBox>
             </HBox>
             <TableView fx:id="costTableView" maxHeight="-Infinity" minHeight="-Infinity" prefHeight="192.0" prefWidth="766.0">
                 <columns>
                     <TableColumn fx:id="costNameColumn" editable="false" maxWidth="1.7976931348623157E308" minWidth="-1.0" prefWidth="481.0" text="Tên loại phí" />
                     <TableColumn fx:id="costAmountColumn" editable="false" maxWidth="1.7976931348623157E308" minWidth="-1.0" prefWidth="272.0" text="Giá" />
