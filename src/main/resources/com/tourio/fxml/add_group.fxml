            </VBox>
         <VBox styleClass="form-group">
            <children>
               <Text strokeType="OUTSIDE" strokeWidth="0.0" text="Tour" />
               <ComboBox fx:id="tourComboBox" maxWidth="1.7976931348623157E308" minWidth="150.0" prefHeight="25.0" prefWidth="584.0" />
            </children>
         </VBox>
         <VBox prefHeight="45.0" prefWidth="530.0" styleClass="form-group">
            <children>
               <Text strokeType="OUTSIDE" strokeWidth="0.0" text="Giá tour" />
               <ComboBox fx:id="tourPriceComboBox" maxWidth="1.7976931348623157E308" minWidth="150.0" prefHeight="25.0" prefWidth="716.0" />
            </children>
         </VBox>
         <VBox styleClass="form-group">
            <children>
               <Text strokeType="OUTSIDE" strokeWidth="0.0" text="Ngày bắt đầu" />
               <DatePicker fx:id="startDatePicker" />
