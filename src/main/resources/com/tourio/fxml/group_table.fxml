<?xml version="1.0" encoding="UTF-8"?>

<?import java.lang.String?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<VBox maxHeight="1.7976931348623157E308" maxWidth="1.7976931348623157E308" minWidth="600.0" prefHeight="600.0" spacing="16.0" style="-fx-background-color: white;" stylesheets="@../css/main.css" xmlns="http://javafx.com/javafx/17" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.tourio.controllers.GroupTableController">
    <padding>
        <Insets bottom="16.0" left="16.0" right="16.0" top="16.0" />
    </padding>
    <children>
        <HBox maxHeight="1.7976931348623157E308" maxWidth="1.7976931348623157E308" spacing="16.0" VBox.vgrow="NEVER">
            <children>
                <Button fx:id="addButton" contentDisplay="RIGHT" defaultButton="true" mnemonicParsing="false" onAction="#onCreateClick" prefWidth="63.0" text="Thêm" textOverrun="CLIP">
                    <font>
                        <Font size="14.0" />
                    </font>
                    <styleClass>
                        <String fx:value="primary-button" />
                        <String fx:value="action-button" />
                    </styleClass>
                </Button>
                <Button fx:id="editButton" defaultButton="true" mnemonicParsing="false" onAction="#onEditClick" text="Sửa">
                    <font>
                        <Font size="14.0" />
                    </font>
                    <HBox.margin>
                        <Insets />
                    </HBox.margin>
                    <styleClass>
                        <String fx:value="primary-button" />
                        <String fx:value="action-button" />
                    </styleClass>
                </Button>
                <Button fx:id="deleteButton" mnemonicParsing="false" onAction="#onDeleteClick" text="Xóa">
                    <font>
                        <Font size="14.0" />
                    </font>
                    <HBox.margin>
                        <Insets />
                    </HBox.margin>
                    <styleClass>
                        <String fx:value="danger-button" />
                        <String fx:value="action-button" />
                    </styleClass>
                </Button>
                <HBox alignment="CENTER" style="-fx-translate-x: 180;">
                    <children>
                        <TextField fx:id="searchTextField" prefHeight="25.0" prefWidth="157.0" promptText="Tìm kiếm..." />
                    </children>
                </HBox>
            </children>
        </HBox>
        <TableView fx:id="table" maxHeight="1.7976931348623157E308" maxWidth="1.7976931348623157E308" VBox.vgrow="ALWAYS">
            <columnResizePolicy>
                <TableView fx:constant="CONSTRAINED_RESIZE_POLICY" />
            </columnResizePolicy>
            <columns>
                <TableColumn fx:id="groupNameColumn" prefWidth="-1.0" text="Tên đoàn" />
            <TableColumn fx:id="groupStartDateColumn" prefWidth="-1.0" text="Ngày bắt đầu" />
            <TableColumn fx:id="groupEndDateColumn" prefWidth="-1.0" text="Ngày kết thúc" />
            <TableColumn fx:id="groupTourPriceColumn" prefWidth="-1.0" text="Giá tour" />
            </columns>
        </TableView>
    </children>
</VBox>
