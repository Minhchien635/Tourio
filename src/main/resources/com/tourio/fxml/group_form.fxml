        <VBox maxHeight="1.7976931348623157E308" maxWidth="1.7976931348623157E308" minWidth="-Infinity" spacing="16.0">
            <padding>
                <Insets bottom="16.0" left="16.0" right="16.0" top="16.0" />
            </padding>
            <VBox styleClass="form-group">
                <Text strokeType="OUTSIDE" strokeWidth="0.0" text="Tên đoàn" />
                <TextField fx:id="nameTextField" styleClass="form-group" />
            </VBox>
            <VBox styleClass="form-group">
                <children>
                    <Text strokeType="OUTSIDE" strokeWidth="0.0" text="Tour" />
                    <ComboBox fx:id="tourComboBox" maxWidth="1.7976931348623157E308" minWidth="150.0" prefHeight="25.0" prefWidth="584.0" styleClass="form-group" />
                </children>
            </VBox>
            <VBox prefHeight="45.0" prefWidth="530.0" styleClass="form-group">
                <children>
                    <Text strokeType="OUTSIDE" strokeWidth="0.0" text="Giá tour" />
                    <ComboBox fx:id="tourPriceComboBox" maxWidth="1.7976931348623157E308" minWidth="150.0" prefHeight="25.0" prefWidth="716.0" styleClass="form-group" />
