                    </HBox>
                </HBox>
                <ListView fx:id="customerListView" maxHeight="1.7976931348623157E308" maxWidth="1.7976931348623157E308" minHeight="-Infinity" prefHeight="200.0" />
            </VBox>
            <VBox maxWidth="1.7976931348623157E308" styleClass="form-group">
                <children>
                    <HBox alignment="BOTTOM_LEFT">
                        <children>
                            <VBox alignment="BOTTOM_LEFT" HBox.hgrow="ALWAYS">
                                <children>
                                    <Text strokeType="OUTSIDE" strokeWidth="0.0" text="Nhân viên" />
                                </children>
                            </VBox>
                            <HBox fx:id="employeeActionButtons" spacing="8.0" translateY="-4.0">
                                <children>
                                    <Button mnemonicParsing="false" onAction="#onAddEmployeeClick" text="Thêm">
                                        <styleClass>
                                            <String fx:value="primary-button" />
                                            <String fx:value="action-button" />
                                        </styleClass>
                                    </Button>
                                    <Button mnemonicParsing="false" onAction="#onDeleteEmployeeClick" text="Xóa">
                                        <styleClass>
                                            <String fx:value="danger-button" />
                                            <String fx:value="action-button" />
                                        </styleClass>
                                    </Button>
                                </children>
                            </HBox>
                        </children>
                    </HBox>
                    <TableView fx:id="employeeTableView" maxHeight="-Infinity" minHeight="-Infinity" prefHeight="192.0" prefWidth="766.0">
                        <columns>
                            <TableColumn fx:id="employeeNameColumn" editable="false" maxWidth="1.7976931348623157E308" minWidth="-1.0" prefWidth="481.0" text="Tên" />
                            <TableColumn fx:id="employeeJobColumn" editable="false" maxWidth="1.7976931348623157E308" minWidth="-1.0" prefWidth="284.0" text="Công việc" />
                        </columns>
                    </TableView>
                </children>
            </VBox>
        </VBox>
